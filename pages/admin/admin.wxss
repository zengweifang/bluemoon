}

.page .admin_image{
  background-color: #4b5ea3;
  height: 110px;
  line-height: 110px;
  color: white;
  padding-left: 30px;
}

.page .admin_image image{
  height: 30px;
  width: 30px;
  border-radius: 50%;

}

.page .admin_image text{
  display: inline-block;
  margin-left: 15px
}

