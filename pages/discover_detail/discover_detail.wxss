/* pages/discover_detail/discover_detail.wxss */
.disc_detail{
  width: 100%
}
.dic_detail_banner{
  margin: 15px
}

.dic_detail_banner image{
  border-radius: 10px;
  box-shadow: 2px 2px 2px #d2d2d2;
  height: 192px;
}

.slide-image {
  width: 100%;
  height: inherit;
 
}
.swiper-image {
  height: 80px; 
  text-align: center;
  margin-left: 15px
}

.dic_detail_banner image{
  width: 100%;
}

.swiper-item{
  width: auto!important
}

.dic_detail_swiper{
  white-space: nowrap;
  display: flex;
  margin-left: 15px;
}
.dic_detail_swiper_scroll{
  width: 100%;
  height: 50px;
}

.dic_detail_swiper_item{
  width: 100px;
  height: 45px;
  border-radius: 10px;
  box-shadow: 2px 2px 5px #d2d2d2;
  line-height: 45px;
  text-align: center;
  margin-right: 5px;
  /* background-color: #B0E2FF;
  color: #ffffff */
}
.item_hasbgr{
  background-color: #B0E2FF;
  color: #ffffff
}

.dic_detail_result{
  margin: 15px;
  background-color: #f2f2f2;
  line-height: 35px;
  border-radius: 10px;
  padding: 15px
}
.dic_detail_result view{
  margin-bottom: 10px
}