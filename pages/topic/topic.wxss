.questions{
  font-size: 12px;
  padding-bottom: 50px;
  overflow-x: hidden;
}
.questions .questions_content{
  padding: 20px 15px;
  margin-bottom: 1px;
  background-color: #ffffff
}

.questions .questions_content_image{
  padding-right: 15px
}

.questions .questions_content_image image{
  height: 30px;
  width: 30px;
}

.questions .questions_content_text text{
  border : 1px solid gray;
  border-radius: 50%
}

.questions .questions_content_text .questions_content_b{
  color: #b2b2b2
}

.topic{
  padding: 20px 15px;
  background-color: #ffffff
}

.topic .topic_title{
  height: 36px;
  line-height: 36px;
  font-weight: bold
}

.topic_border{
  border: 1px solid #dedede;
