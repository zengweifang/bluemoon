.page, .answers{
  font-size: 12px;
  padding-bottom: 50px
}

.page .answers_bgr{
  background-color: #ffffff;
  padding: 20px 0
}

.answers .answers_title_image{
  padding: 15px
}

.answers .answers_title_image image{
  width: 30px;
  height: 30px
}

.answers .answers_title_c{
